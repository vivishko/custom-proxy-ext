{
  "name": "My Extension",
  "version": "1.2.0",
  "description": "Manage proxies per-site: whitelist/blacklist, random or fixed proxy, import/export.",
  "manifest_version": 3,
  "permissions": [
    "proxy",
    "storage",
    "notifications",
    "activeTab",
    "tabs",
    "webRequest",
    "webRequestAuthProvider",
    "downloads"
  ],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Proxy Settings"
  },
  "icons": {
    "48": "icon48.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["tabs.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
